<% flash.each do |type, msg| %>
  <div class="alert alert-success" >
    <%= msg %>
  </div>
<% end %>

<div class="user-show">
  <br>
  <h3>WELCOME <%=current_user.name.upcase%>!</h3>
  <h4>What would you like to do today?</h4>
  <br>

  <p>
    &nbsp;
    <%=link_to 'View all of your reviews', user_reviews_path(@user), :class => "btn btn-light" %> 
    <%=link_to 'Create a new review', new_user_review_path(@user), :class => "btn btn-light"%>  &nbsp;
  </p>
</div>


<style>
 .user-show {
   text-align: center;
   position: absolute;
   top: 200px;
   right: 525px;
   border-style: outset;
   font-size: 150%;
 }
</style>
         




