Reviews Index page




    <div class="container">
    
     <% if current_user.reviews.present? %>
    <h4>Here are your reviews:</h4>
    
    <br>
    
    
  <% @reviews.each do |rev|%>
    
    <ul>
        <p><li><strong>Course:</strong> <%= rev.course.name %></p></li>
        <p><strong>Review title:</strong> <%= rev.title %></p>
        <p>Posted: <%= rev.created_at.strftime('%B %d, %Y') %> </p> 
              
              <%= link_to "View", review_path(rev) %> |
              <%= link_to "Edit", edit_review_path(rev) %> |
              <%= link_to "New", new_user_review_path(rev) %> |
             <%= button_to 'Delete', rev, method: :delete, :onclick => "return confirm('Are you sure you want to delete this post?')" %>
             
              </ul>
              
          
          <% end %>
          <br>
          <%= link_to 'Return to the home page', user_path(current_user) %>
    </div>
    <% else %> 
    <p>You have made no reviews yet...</p>
    <%= link_to 'return to to the main page', user_path(current_user)%>
<% end %>