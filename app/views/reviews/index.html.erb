
  <div class="container">
    
     <% if current_user.reviews.present? %>
     <br>
    <h4>You currently have <%= @reviews.length %> reviews  </h4>
   
    
    
    
  <% @reviews.each do |rev|%>
    
    <ul>
        <p><li><strong>Course:</strong> <%= rev.course.name %> <br> 
        <strong>Review title:</strong> <%= rev.title %> <br>
        <strong>Posted:</strong> <%= rev.created_at.strftime('%B %d, %Y') %></li> </p> 
              
              <%= link_to "View", review_path(rev), :class => "btn btn-light" %> 
              <%= link_to "Edit", edit_review_path(rev), :class => "btn btn-light" %> 
              <%= link_to "New", new_user_review_path(rev), :class => "btn btn-light" %>    
              <%= link_to "Delete", rev, :class => "btn btn-light", data: {
                 turbo_method: :delete, 
                 turbo_confirm: "Are you sure?"
                 } %>
                 <div style="padding-top:50px">
              </ul>
              
          
          <% end %>
          </div>
          <br>

          <%# <div id="return-button">
          <%= link_to 'Return to the home page', user_path(current_user), :class => "btn btn-info" %>
          <%# </div> %>

    <% else %> 
    <div class="no-reviews">
    <h2>No reviews yet.</h2>
    <%= link_to 'Return to the main menu', user_path(current_user), :class => "btn btn-light"%>
    </div>
<% end %>

<style>
.no-reviews {
  text-align: center;
  position: absolute;
  top: 250px;
  right: 625px;
}
</style>

