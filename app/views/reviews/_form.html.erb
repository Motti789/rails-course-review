<%if flash[:error]%>
<%=flash[:error]%>
<%end%>

<%= form_for @review do |f| %>

 <%= f.hidden_field :user_id %>

   <div class="mb-3">
    
    <br>
    <%= f.text_field :title, class: "form-control", placeholder: "Review Title."%>
     </div>
    <div class="mb-3">
    
    <br>
    <%= f.text_area :comment, class: "form-control", placeholder: "Write your review here."%>
     </div>

     <div >
     Course: <%= f.collection_select :course_id, Course.order(:name), :id, :name %>

     </div>
     <br>

    <div class="mb-3">
     <%= f.submit "Submit Review", class: "btn btn-primary" %>
     </div>
     
<%end%>